{
	"scheme": "acme",
	"userInterfaceStyle": "automatic",
	"orientation": "default",
    "icon": "src/assets/images/logo_purple.png",
	"web": {
		"output": "static"
	},
	"plugins": [
		"expo-router",
		"expo-screen-orientation",
		[
			"expo-build-properties",
			{
				"android": {
					"compileSdkVersion": 35,
					"targetSdkVersion": 35,
					"buildToolsVersion": "35.0.0",
					"minSdkVersion": 24,
					"enableProguardInReleaseBuilds": true,
					"enableShrinkResourcesInReleaseBuilds": true
				},
				"ios": {
					"deploymentTarget": "15.1",
					"useFrameworks": "static"
				}
			}
		],
      [
        "expo-splash-screen",
        {
          "image": "src/assets/images/logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#C5F680",
          "dark": {
            "backgroundColor": "#BA9BF7"
          }
        }
      ],
		"expo-audio",
		"expo-video",
		[
			"expo-notifications",
			{
				"icon": "src/assets/images/logo.png",
				"color": "#C5F680"
			}
		]
	],
	"assetBundlePatterns": ["assets/fonts/*", "src/assets/**/*"],
	"name": "Fitchoice",
	"slug": "Fitchoice",
	"ios": {
		"bundleIdentifier": "com.yzned.Fitchoice",
		"infoPlist": {
			"NSCameraUsageDescription": "Нужно для сканирования QR-кодов и загрузки фото",
			"NSUserNotificationsUsageDescription": "Мы будем напоминать о тренировках, чтобы вы ничего не пропустили",
			"UILaunchStoryboardName": "SplashScreen"
		},
		"supportsTablet": true
	},
	"android": {
		"package": "com.yzned.Fitchoice",
		"permissions": [
			"READ_EXTERNAL_STORAGE",
			"WRITE_EXTERNAL_STORAGE",
			"RECORD_AUDIO"
		],
      "adaptiveIcon": {
        "backgroundColor": "#C5F680",
        "foregroundImage": "src/assets/images/logo.png",
        "monochromeImage": "src/assets/images/logo.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
	},
	"experiments": {
		"tsconfigPaths": true
	}
}
