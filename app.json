{
  "scheme": "acme",
  "userInterfaceStyle": "automatic",
  "orientation": "default",
  "web": {
    "output": "static"
  },
  "plugins": [
    "expo-router",
    "expo-font",
    "expo-screen-orientation"
  ],
  "assetBundlePatterns": [
    "assets/fonts/*"
  ],
  "name": "Fitchoice",
  "slug": "Fitchoice",
  "ios": {
    "bundleIdentifier": "com.yzned.Fitchoice",
    "infoPlist": {
      "NSCameraUsageDescription": "Нужно для сканирования QR-кодов и загрузки фото"
    }
  },
  "android": {
    "package": "com.yzned.Fitchoice",
    "permissions": [
      "CAMERA",
      "READ_EXTERNAL_STORAGE",
      "WRITE_EXTERNAL_STORAGE",
      "RECORD_AUDIO"
    ],
    "adaptiveIcon": {
      "backgroundColor": "#ffffff"
    },
    "fonts": [
      "./assets/fonts/Rimma_sans.ttf"
    ]
  }
}
