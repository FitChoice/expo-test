# React Native / Expo Compatibility Configuration
# Use hoisted node_modules instead of PnP (Plug'n'Play doesn't work with React Native)
node-linker=hoisted

# Hoist all dependencies to root for Metro bundler compatibility
shamefully-hoist=true

# Don't fail on peer dependency warnings (common in React Native ecosystem)
strict-peer-dependencies=false

# Use strict SSL
strict-ssl=true

# Disable auto-install-peers to avoid unexpected installations
auto-install-peers=false

