{
	"cli": {
		"version": ">= 13.2.0"
	},
	"build": {
		"development": {
			"developmentClient": true,
			"distribution": "internal",
			"ios": {
				"simulator": true
			},
			"android": {
				"buildType": "apk"
			}
		},
		"preview": {
			"distribution": "internal",
			"channel": "preview",
			"ios": {
				"simulator": false,
				"buildConfiguration": "Release"
			},
			"android": {
				"buildType": "apk"
			}
		},
		"preview-testflight": {
			"distribution": "store",
			"channel": "preview",
			"ios": {
				"simulator": false,
				"buildConfiguration": "Release"
			}
		},
		"production": {
			"channel": "production",
			"ios": {
				"simulator": false
			},
			"android": {
				"buildType": "app-bundle"
			}
		}
	},
	"submit": {
		"production": {}
	}
}
